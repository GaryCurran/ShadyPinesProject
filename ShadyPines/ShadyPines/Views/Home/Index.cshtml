@{
    ViewBag.Title = "Home Page";
}
<meta name='viewport' content='width=device-width' />

<div class="row">
    <div class="col-lg-12">
        <blockquote>
            <h2>Philosphy</h2>
            <p align ="justify" >Our philosophy is very simple we will ensure that our residents experience a quality of life that, is as close as possible to the
             warm and secure environment that they are accustomed to, in their own homes, among their families.</p>
            <small>Time And health are our two most precious assets</small>
        </blockquote>
    </div>
</div>
<!--<div class="jumbotron">-->
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/sp.jpg" />
            <div class="carousel-caption">
                <h3>Shady Pines</h3>

            </div>
        </div> <!--CLOSE CAROUSEL INNER-->

        <div class="item">
            @*<img src="~/Content/Images/FOO.jpg" />*@
            <img src="~/Content/Images/rest.jpg" />
            <div class="carousel-caption">
                <h3>Restaurant</h3>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/act.jpg" />
            <div class="carousel-caption">
                <h3>Activities Room</h3>
            </div>
        </div>
    </div>
    <br />


    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
<!--</div>-->

<div>
</div>
<br />

<div class="row">
    <div class="col-md-4">
        <h2>Activities</h2>
        <p>
            Our Activities Team is dedicated to organising interesting, stimulating and relevant social activities. The program is varied and plentiful and all residents are encouraged to participate.
        </p>
        @Html.ActionLink("Activities", "Index", "Home", new { @class = "btn btn-info" })
    </div>
    <div class="col-md-4">
        <h2>Independent Living</h2>
        <p>We work together with the residents and their families to ensure that the residents continue to get the best out of their life within a stimulating, secure and homely environment providing care and assistance to them </p>
        @Html.ActionLink("Independent Living", "Index", "Home", new { @class = "btn btn-info" })
    </div>
    <div class="col-md-4">
        <h2>Facilities</h2>
        <p>Shady Pines is made up of 52 single rooms. We also have an activities room, a conference/training room, professional development room. Our main reception is attended by a staff member from 9am to 9.30pm. </p>
        @Html.ActionLink("Facilities", "Index", "Home", new { @class = "btn btn-info" })

    </div>
</div>
